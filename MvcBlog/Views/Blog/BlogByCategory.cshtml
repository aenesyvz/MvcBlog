@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogByCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span>Category</span>
              
                <h3>@ViewBag.category</h3>
                <p>@ViewBag.description</p>
                
               </div>
        </div>
    </div>
</div>
<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
            <div class="col-lg-4 mb-4">
                <div class="entry2">
                    <a href="/Blog/BlogDetails/@x.BlogId"><img src="@x.BlogImage" style="height:250px" alt="Image" class="img-fluid rounded"></a>
                    <div class="excerpt">
                        <span class="post-category text-white bg-secondary mb-3">@x.Category.CategoryName</span>

                        <h2><a href="/Blog/BlogDetails/@x.BlogId">@x.BlogTitle</a></h2>
                        <div class="post-meta align-items-center text-left clearfix">
                            <figure class="author-figure mb-0 mr-3 float-left"><img src="@x.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                            <span class="d-inline-block mt-1">By <a href="#">@x.Author.AuthorName</a></span>
                            <span>&nbsp;-&nbsp; @(((DateTime)x.BlogDate).ToString("dd-MMM-yyyy"))</span>
                        </div>

                        <p>@x.BlogContent.Substring(0,x.BlogContent.Substring(0,200).LastIndexOf(" "))...</p>
                        <p><a href="/Blog/BlogDetails/@x.BlogId">Devamını Okuyunuz</a></p>
                    </div>
                </div>
            </div>
            }
        </div>
       
    </div>
</div>
@Html.Action("Footer","About")



