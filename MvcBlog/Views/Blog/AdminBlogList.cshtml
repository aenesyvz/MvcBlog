@model IEnumerable<EntityLayer.Concrete.Blog> 
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br/>
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.BlogId</td>
                    <td>@x.BlogTitle</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.BlogDate.ToShortDateString()</td>
                    <td><a href="/Blog/DeleteBlog/@x.BlogId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Blog/UpdateBlog/@x.BlogId" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Blog/BlogDetails/@x.BlogId" class="btn btn-info">Detaylar</a></td>
                    <td><a href="/Blog/GetCommentByBlog/@x.BlogId" class="btn btn-dark">Yorumlar</a></td>
                </tr>
            }
</table>
<a href="/Blog/AddNewBlog/" class="btn btn-secondary">Yeni Blog Ekle</a>
