
@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string caseName = "";}
@{ int puan = 0;}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                Id

                            </th>

                            <th style="width: 20%">

                                Blog Başlıkı

                            </th>



                            <th>

                                Blog Bar

                            </th>

                            <th style="width: 8%" class="text-center">

                                Blog Durumu

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            puan = x.BlogRating * 10;
                            if (puan >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                caseName = "Çok İyi";
                            }
                            if (puan <= 84 && puan >= 70)
                            {
                                color = "post-category text-white bg-info mb-3";
                                caseName = "Başarılı";
                            }
                            if (puan <= 69 && puan >= 50)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                caseName = "Fena Değil";
                            }
                            if (puan <= 49 && puan >= 0)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                caseName = "Başarısız";
                            }

                            <tr>

                                <td>

                                    @x.BlogId

                                </td>
                                <td>@x.BlogTitle</td>




                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="10" aria-volumemin="0" aria-volumemax="10" style="width:@puan%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığın Puan : @puan

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge badge-@color">@caseName</span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@x.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@x.BlogId">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <a href="/Blog/AddNewBlog/" class="btn btn-dark">Yeni Blog Ekle</a>
</body>

</html>



